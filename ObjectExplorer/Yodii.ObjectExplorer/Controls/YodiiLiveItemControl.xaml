<UserControl
    x:Class="Yodii.ObjectExplorer.Controls.YodiiLiveItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:Controls="clr-namespace:Yodii.ObjectExplorer.Controls"
    mc:Ignorable="d"
    x:Name="UserControl">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="../Resources/IconsResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>

        <Controls:YodiiRunningStatusIcon
            RunningStatus="{Binding ElementName=UserControl, Path=LiveItemViewModel.LiveItem.RunningStatus}" />

        <TextBlock
            TextTrimming="CharacterEllipsis"
            VerticalAlignment="Center"
            Grid.Column="1"
            Text="{Binding ElementName=UserControl, Path=LiveItemViewModel.DisplayName, TargetNullValue=(DisplayName), FallbackValue=(DisplayName)}" />
    </Grid>
</UserControl>
