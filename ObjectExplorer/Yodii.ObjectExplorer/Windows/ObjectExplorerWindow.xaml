<Window
    x:Class="Yodii.ObjectExplorer.Windows.ObjectExplorerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:Yodii.ObjectExplorer.ViewModels"
    mc:Ignorable="d mocks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mocks="clr-namespace:Yodii.ObjectExplorer.Mocks"
    Title="Object explorer"
    Height="480"
    Width="640">
    <Grid
        d:DataContext="{d:DesignInstance Type=mocks:MockObjectExplorerViewModel, IsDesignTimeCreatable=True}">
        <ListView
            ItemsSource="{Binding Path=EngineViewModel.Plugins}">
            <ListView.ItemTemplate>
                <DataTemplate
                    DataType="vms:PluginViewModel">
                    <TextBlock
                        Text="{Binding Path=Plugin.FullName}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
