<Window x:Class="Yodii.DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" MinHeight="350" MinWidth="400" Width="500" ResizeMode="NoResize">
    <StackPanel>
        <Button Click="Button_Click" Content="Start"/>
        <Label Content="Plugin List"/>
        <ListBox ItemsSource="{Binding PluginNameList}"  BorderBrush="Transparent" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="{Binding}" FontWeight="Bold" Width="250" />
                        <Button Content="TryStart" Click="TryStartPlugin_Clicked"/>
                        <Button Content="TryStop" Click="TryStopPlugin_Clicked"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Service List"/>
        <ListBox ItemsSource="{Binding ServiceNameList}"  BorderBrush="Transparent" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="{Binding}" FontWeight="Bold" Width="250" />
                        <Button Content="TryStart" Click="TryStartService_Clicked"/>
                        <Button Content="TryStop" Click="TryStopService_Clicked"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
