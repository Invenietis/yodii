                                    CommandParameter="{x:Static ym:StartDependencyImpact.FullStop}"
                                    Header="FullStop" />
                                <MenuItem
                                    Command="{Binding Path=StartItemCommand}"
                                    CommandParameter="{x:Static ym:StartDependencyImpact.StopOptionalAndRunnable}"
                                    Header="StopOptionalAndRunnable" />
                                <MenuItem
                                    Command="{Binding Path=StartItemCommand}"
                                    CommandParameter="{x:Static ym:StartDependencyImpact.StartRecommended}"
                                    Header="StartRecommended" />
                                <MenuItem
                                    Command="{Binding Path=StartItemCommand}"
                                    CommandParameter="{x:Static ym:StartDependencyImpact.IsTryOnly}"
                                    Header="IsTryOnly" />
                                <MenuItem
                                    Command="{Binding Path=StartItemCommand}"
                                    CommandParameter="{x:Static ym:StartDependencyImpact.TryFullStop}"
                                    Header="TryFullStop" />
                                <MenuItem
                                    Command="{Binding Path=StartItemCommand}"
                                    CommandParameter="{x:Static ym:StartDependencyImpact.TryStopOptionalAndRunnable}"
                                    Header="TryStopOptionalAndRunnable" />
                                <MenuItem
                                    Command="{Binding Path=StartItemCommand}"
                                    CommandParameter="{x:Static ym:StartDependencyImpact.TryStartRecommended}"
                                    Header="TryStartRecommended" />
                                <MenuItem
                                    Command="{Binding Path=StartItemCommand}"
                                    CommandParameter="{x:Static ym:StartDependencyImpact.TryFullStart}"
                                    Header="TryFullStart" />
                            </ContextMenu>
                        </local:DropDownButton.DropDown>-->
                        
                    </Button>
                    <!-- Stop button -->
                    <Button
                        Margin="3pt,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Height="12pt"
                        Width="12pt"
                        DockPanel.Dock="Right"
                        Command="{Binding Path=StopItemCommand}"
                        FontFamily="Webdings">
                        <Button.Style>
                            <Style
                                TargetType="{x:Type Button}"
                                BasedOn="{StaticResource {x:Type Button}}">
                                <Setter
                                    Property="Visibility"
                                    Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Path=LiveObject.RunningStatus, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                        Value="Running">
                                        <Setter
                                            Property="Visibility"
                                            Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Image
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            SnapsToDevicePixels="True"
                            Source="/Yodii.Lab;component/Assets/Icons/RunningStatusStopped.png">
                        </Image>
                    </Button>
                    <TextBlock
                        VerticalAlignment="Center"
                        x:Name="VertexTitle"
                        Text="{Binding Path=Title, Mode=OneWay, FallbackValue=Title}"
                        FontSize="12pt" />
                </DockPanel>
                <StackPanel
                    Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style
                            TargetType="StackPanel">
                            <Setter
                                Property="Visibility"
                                Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding Path=ConfigurationStatus}"
                                    Value="Optional">
                                    <Setter
                                        Property="Visibility"
                                        Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Image
                        VerticalAlignment="Center"
                        Stretch="Uniform"
                        SnapsToDevicePixels="True"
                        Source="/Yodii.Lab;component/Assets/Icons/PropertyIcon.png" />
                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{Binding Path=ConfigurationStatus, FallbackValue=(ConfigurationStatus)}">
                        <TextBlock.Style>
                            <Style
                                TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Path=HasConfiguration}"
                                        Value="True">
                                        <Setter
                                            Property="Foreground"
                                            Value="White" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding Path=HasConfiguration}"
                                        Value="False">
                                        <Setter
                                            Property="Foreground"
                                            Value="Gray" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </ContentControl>

        <Border.Effect>
            <DropShadowEffect
                BlurRadius="3"
                Color="Gray"
                Opacity="0.3"
                Direction="300" />
        </Border.Effect>
        <Border.Style>
            <Style
                TargetType="Border">
                <Setter
                    Property="Background"
                    Value="Black" />
                <Style.Triggers>
                    <!-- Service styling -->
                    <DataTrigger
                        Binding="{Binding Path=IsService, Mode=OneWay}"
                        Value="true">
                        <Setter
                            Property="BorderBrush"
                            Value="Red" />
                    </DataTrigger>
                    <!-- Plugin styling -->
                    <DataTrigger
                        Binding="{Binding Path=IsPlugin, Mode=OneWay}"
                        Value="true">
                        <Setter
                            Property="BorderBrush"
                            Value="Blue" />
                    </DataTrigger>
                    <!-- Running status -->
                    <DataTrigger
                        Binding="{Binding Path=IsLive, Mode=OneWay}"
                        Value="false">
                        <Setter
                            Property="Background"
                            Value="Black" />
                    </DataTrigger>
                    <DataTrigger
                        Binding="{Binding Path=LiveObject.RunningStatus, Mode=OneWay}"
                        Value="RunningLocked">
                        <Setter
                            Property="Background"
                            Value="#FF005500" />
                    </DataTrigger>
                    <DataTrigger
                        Binding="{Binding Path=LiveObject.RunningStatus, Mode=OneWay}"
                        Value="Running">
                        <Setter
                            Property="Background"
                            Value="#FF005500" />
                    </DataTrigger>
                    <DataTrigger
                        Binding="{Binding Path=LiveObject.RunningStatus, Mode=OneWay}"
                        Value="Stopped">
                        <Setter
                            Property="Background"
                            Value="#FF550000" />
                    </DataTrigger>
                    <DataTrigger
                        Binding="{Binding Path=LiveObject.RunningStatus, Mode=OneWay}"
                        Value="Disabled">
                        <Setter
                            Property="Background"
                            Value="#FF550000" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
    </Border>
</UserControl>
